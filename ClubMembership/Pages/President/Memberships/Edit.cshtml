@page
@model ClubMembership.Pages.President.Memberships.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Member: @Model.Name</h1>
<h4>Membership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Membership.Id" />
            <div class="form-group">
                <label asp-for="Membership.JoinDate" class="control-label"></label>
                <input asp-for="Membership.JoinDate" value="@Model.Membership.JoinDate" type="date" class="form-control" />
                <span asp-validation-for="Membership.JoinDate" class="text-danger"></span>
            </div>
            <div hidden="hidden" class="form-group">
                <label asp-for="Membership.LeaveDate" class="control-label"></label>
                <input asp-for="Membership.LeaveDate" type="date" class="form-control" />
                <span asp-validation-for="Membership.LeaveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.Status" class="control-label"></label>
                <select asp-for="Membership.Status" asp-items="@Model.Status" class="form-control"></select>
                <span asp-validation-for="Membership.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membership.Role" class="control-label"></label>
                <select asp-for="Membership.Role"asp-items="@Model.Roles" class="form-control"></select>
                <span asp-validation-for="Membership.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
