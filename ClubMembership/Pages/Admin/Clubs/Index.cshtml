@page
@model ClubMembership.Pages.Admin.Clubs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club[0].CreateAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Club) {
        <tr>
            <td class="col-1">
                <img src="@Html.DisplayFor(modelItem => item.LogoUrl)" alt="club-logo" style="display:block; width:100%; height:auto;">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>

            <td>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
